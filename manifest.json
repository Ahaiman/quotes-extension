{
    
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0",


    "description": "An Extension to generate a random famous quatos",

    "browser_action": {
        "default_icon": {                 
          "main_icon": "icon.png"
        },     
        "default_title": "Google Quate Of The Day",      
        "default_popup": "popup.html"        
    },

    "permissions" : [
        "http://api.forismatic.com/*"
    ]
    
    
}